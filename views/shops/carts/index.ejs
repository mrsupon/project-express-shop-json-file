<%- include('../../layouts/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../../layouts/navigation.ejs') %>

    <main>

        <% if (cart.products.length >= 0) { %>
            <div class="grid">
                <article class="card product-item">
                <% for (let product of cart.products) { %>
                    
                        <div class="card__content">
                            <p class="inline" >Product: <%= product.title %> Qty: <%= product.qty %> </p>
                            <form class="inline" action="/shops/carts/<%= product.id %>?_method=DELETE" method="POST" style="float: right;" >
                                <input type="hidden" name="productId" value="<%= product.id  %>" >
                                <button class="btn" type="submit">Delete</button>                                
                            </form>                            
                        </div>
                <% } %>
                    <div class="card__content" style="margin-top: auto;">
                        <p  >Total Price: <%=  parseFloat(cart.totalPrice).toFixed(2) %> </p>
                    </div>
                </article>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>

    </main>
    <%- include('../../layouts/end.ejs') %>